page {
    background-color: rgb(208, 208, 208);
    width: 100%;
    height: 100%;
}

.zhidinglan {
    position: fixed;
    height: 60rpx;
    top: 0px;
    width: inherit;
}
.top {
    width: 100%;
    height: 60rpx;
    background-color: red;
    display: flex;
    flex-wrap: nowrap;
    float: top;
}

.top-items {
    width: 50%;
    height: 60rpx;
    text-align: center;
}

.top-items text {
    color: white;
    font-size: 15px;
}

.shoucangStarIcon {
    width: 35rpx;
    height: 35rpx;
    padding-left: 480rpx;
}

.cell {
    background-color: rgb(255, 255, 255);
    width: 750rpx;
    min-height: 20%;
    margin-bottom: 20rpx;
    margin-top: 60rpx;
}

.cell-frame {
    padding: 30rpx;
}

.cell-top {
    font-size: 12px;
    padding-top: 10rpx;
    display: flex;
    flex-flow: row nowrap;
}

.changjing {
    color: red;
    padding-right: 40rpx;
}

.time {
    color: gray;
}

.neirong {
    padding: 20rpx 0rpx 20rpx 0rpx;
}

.neirong-holder {
    color: rgb(48, 48, 48);
    font-size: 17px;
}

.line {
    width: 650rpx;
    height: 1px;
    border-top: 2rpx solid lightgray; 
}

.jingdian-tell {
    padding: 20rpx 0rpx 20rpx 0rpx;
}

.jingdian-tell-holder {
    font-size: 14px;
    color: rgb(48, 48, 48);
}

.operate-area {
    padding: 20rpx 0rpx 20rpx 0rpx;
    display: flex;
    flex-flow: row nowrap;
}

.find {
    padding-right: 30rpx;
}

.find-image {
    width: 30rpx;
    height: 30rpx;
}

.find-text {
    font-size: 12px;
    padding-left: 8rpx;
    color: rgb(171, 171, 171);
}

.back-time {
    color: rgb(171, 171, 171);
    font-size: 12px;
    padding-left: 250rpx;
}

.editBtn {
    height: 55rpx;
    line-height: 55rpx;
    font-size: 12px;
    border-radius: 16px;
    border: 1px solid rgb(171, 171, 171);
    width: 110rpx;
    color: rgb(171, 171, 171);
    text-align: center;
    margin-left: 200rpx;
}

.zan-holder {
    padding-top: 10rpx;
}

.image-holder {
    background-color: rgb(230, 230, 230);
    border-radius: 10px;
}

.zan-headImage {
    width: 50rpx;
    height: 50rpx;
    border-radius: 50%;
    box-shadow: 1px white;
    padding: 10rpx 0rpx 10rpx 10rpx;
}